<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    tools:context="br.com.minkaholiveira.cadastroproduto.TelaInicial">


    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="Ultimo Produto Cadastrado"
        android:layout_marginTop="30sp"
        android:textSize="30dp"
        android:textAlignment="center"
        android:textStyle="bold"/>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal">

        <TextView
            android:id="@+id/tela_inicial_nome_fixo"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Nome do Produto: "
            android:layout_marginTop="20sp"
            android:textSize="20dp"/>

        <TextView
            android:id="@+id/tela_inicial_nome_produto"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="20sp"
            android:textSize="20dp"/>
    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

        <TextView
            android:id="@+id/tela_inicial_valor_fixo"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Valor do Produto: "
            android:layout_marginTop="20sp"
            android:textSize="20dp"/>

    <TextView
        android:id="@+id/tela_inicial_valor_produto"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="20sp"
        android:textSize="20dp"/>
    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

        <TextView
            android:id="@+id/tela_inicial_categoria_fixo"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Categoria: "
            android:layout_marginTop="20sp"
            android:textSize="20dp"/>

        <TextView
        android:id="@+id/tela_inicial_categoria_produto"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="20sp"
        android:textSize="20dp"/>

    </LinearLayout>

    <ImageView
        android:id="@+id/tela_inicial_imagem"
        android:layout_width="match_parent"
        android:layout_height="wrap_content" />

    <Button
        android:id="@+id/tela_inicial_botao"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="Cadastrar Produto"
        android:layout_marginTop="80dp"
        android:textSize="20dp"
        android:textStyle="bold" />



</LinearLayout>
