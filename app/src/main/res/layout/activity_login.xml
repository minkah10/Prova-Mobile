<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    tools:context="br.com.minkaholiveira.cadastroproduto.LoginActivity">

    <TextView
        android:id="@+id/tela_login_cabecalho"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="30dp"
        android:text="@string/tela_login"
        android:textAlignment="center"
        android:textSize="40sp"
        android:textStyle="bold"/>

    <EditText
        android:id="@+id/tela_login_user"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:hint="@string/tela_login_user"
        android:textSize="20dp"
        android:layout_marginTop="80dp"/>

    <EditText
        android:id="@+id/tela_login_pass"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:hint="@string/tela_login_pass"
        android:textSize="20dp"
        android:inputType="textPassword"
        android:layout_marginTop="15dp"/>

    <Button
        android:id="@+id/tela_login_button"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="@string/tela_login_botao"
        android:textSize="20dp"/>
</LinearLayout>
